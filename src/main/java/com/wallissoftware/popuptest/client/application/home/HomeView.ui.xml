<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    @external gwt-Button;
    .home {
    	padding: 10px;
    }
    
    .home .gwt-Button {
    	font-size: 2em;
    	margin: 10px;
    }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.home}">
        <g:Button ui:field="centeredButton">Show Centered Popup</g:Button>
        <g:Button ui:field="topLeftButton">Show Popup at (200, 200)</g:Button>
        <g:Button ui:field="relativeButton">Show Popup Relative To Me</g:Button>
    </g:HTMLPanel>
</ui:UiBinder>